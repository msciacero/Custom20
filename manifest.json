{
  "manifest_version": 3,
  "name": "C20",
  "version": "1.0",
  "description": "Adds additional UI features in Roll20.",
  "permissions": ["storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["https://app.roll20.net/editor/"],
      "js": [
        "app/main.js",
        "app/components/settings.js",
        "app/components/journal.js",
        "app/components/conditionsEditor.js",
        "app/components/dataReset.js",
        "app/components/shared/data.js",
        "library/sortable.js"
      ],
      "css": ["app/styles.css"],
      "world": "ISOLATED"
    },
    {
      "matches": ["https://app.roll20.net/editor/character/*"],
      "js": [
        "character/conditions.js",
        "character/defenses.js",
        "character/miniNotes.js",
        "character/spells.js",
        "character/main.js",
        "library/sortable.js"
      ],
      "css": ["character/styles.css"],
      "all_frames": true,
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app/components/shared/campaignInfo.js",
        "library/icons/resistance.svg",
        "library/icons/filter-solid-full.svg"
      ],
      "matches": ["https://app.roll20.net/*"]
    }
  ]
}
