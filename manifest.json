{
  "manifest_version": 3,
  "name": "Custom20",
  "version": "1.0",
  "description": "Adds custom folder options for players in roll20",
  "permissions": ["storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["https://app.roll20.net/editor/"],
      "js": [
        "app/main.js",
        "app/components/settings.js",
        "app/components/journal.js",
        "app/components/conditionsEditor.js",
        "app/components/shared/data.js"
      ],
      "css": ["app/styles.css"],
      "world": "ISOLATED"
    },
    {
      "matches": ["https://app.roll20.net/editor/character/*"],
      "js": ["character/conditions.js", "character/defenses.js", "character/main.js"],
      "css": ["character/styles.css"],
      "all_frames": true,
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["app/components/shared/campaignInfo.js", "library/icons/resistance.svg"],
      "matches": ["https://app.roll20.net/*"]
    }
  ]
}
